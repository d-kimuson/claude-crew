{
  "name": "claude-crew",
  "description": "Claude Crew",
  "version": "0.0.0",
  "type": "module",
  "bin": {
    "claude-crew": "./dist/cli.js"
  },
  "scripts": {
    "cli": "pnpm ts:run ./src/cli.ts",
    "build": "run-p build:*",
    "build:tsup": "tsup --clean",
    "build:schema": "pnpm ts:run ./src/scripts/buildConfigSchema.ts",
    "typecheck": "tsc -p ./tsconfig.test.json --noEmit",
    "lint": "run-s lint:*",
    "lint:cspell": "cspell lint './**/*.{tsx,ts,mts,mcs,mjs,cjs,js,json,md,yml,yaml}' --gitignore --cache",
    "lint:prettier": "pnpm run:prettier . --check",
    "lint:eslint": "pnpm run:eslint .",
    "fix": "run-s fix:*",
    "fix:prettier": "pnpm run:prettier . --write",
    "fix:eslint": "pnpm lint:eslint --fix",
    "test": "vitest run --shard ${TEST_SHARD:-1/1}",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx ./src/lib/drizzle/migrate.ts",
    "preinstall": "pnpm /^setup:.*/",
    "run:prettier": "prettier --ignore-unknown --no-error-on-unmatched-pattern --cache",
    "run:eslint": "eslint --cache --no-error-on-unmatched-pattern",
    "ts:run": "tsx --tsconfig ./tsconfig.src.json",
    "setup:check-manager": "npx -y only-allow pnpm"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.3",
    "@modelcontextprotocol/sdk": "^1.8.0",
    "@tsconfig/node22": "^22.0.1",
    "@tsconfig/strictest": "^2.0.5",
    "ai": "^4.2.6",
    "diff": "^7.0.0",
    "drizzle-orm": "^0.41.0",
    "drizzle-zod": "^0.7.0",
    "get-port": "^7.1.0",
    "glob": "^11.0.1",
    "ignore": "^7.0.3",
    "inquirer": "^12.5.0",
    "nanoid": "^5.1.5",
    "neverthrow": "^8.2.0",
    "postgres": "^3.4.5",
    "tree-sitter": "^0.22.4",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-python": "^0.23.6",
    "tree-sitter-typescript": "^0.23.2",
    "type-safe-prompt": "^0.0.2",
    "yargs": "^17.7.2",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/diff": "^7.0.2",
    "@types/node": "^22.13.13",
    "@types/yargs": "^17.0.33",
    "cspell": "8.17.3",
    "eslint": "^9.23.0",
    "eslint-import-resolver-typescript": "^4.2.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "lefthook": "1.10.10",
    "npm-run-all2": "^7.0.2",
    "prettier": "3.4.2",
    "tsup": "^8.4.0",
    "typescript-eslint": "^8.28.0",
    "vitest": "^3.0.9"
  },
  "engines": {
    "npm": "forbidden, use pnpm",
    "yarn": "forbidden, use pnpm",
    "pnpm": ">=9.12.3",
    "node": ">=22"
  },
  "packageManager": "pnpm@10.6.5",
  "author": "d-kimuson",
  "keywords": [],
  "license": "MIT"
}
