{
  "allOf": [
    {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "directory": {
          "type": "string"
        },
        "language": {
          "type": "string",
          "default": "日本語"
        },
        "commands": {
          "type": "object",
          "properties": {
            "install": {
              "type": "string",
              "default": "pnpm i"
            },
            "build": {
              "type": "string",
              "default": "pnpm build"
            },
            "test": {
              "type": "string",
              "default": "pnpm test"
            },
            "testFile": {
              "type": "string",
              "default": "pnpm test <file>"
            },
            "checks": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [
                "pnpm tsc -p . --noEmit"
              ]
            },
            "checkFiles": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [
                "pnpm eslint --fix <files>"
              ]
            }
          },
          "additionalProperties": false
        },
        "shell": {
          "type": "object",
          "properties": {
            "enable": {
              "type": "boolean",
              "default": true
            },
            "allowedCommands": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [
                "pnpm"
              ]
            }
          },
          "additionalProperties": false,
          "default": {}
        },
        "git": {
          "type": "object",
          "properties": {
            "defaultBranch": {
              "type": "string",
              "default": "main"
            },
            "autoPull": {
              "type": "boolean",
              "default": true
            }
          },
          "additionalProperties": false,
          "default": {}
        },
        "database": {
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "customDb": {
                  "type": "boolean",
                  "const": true
                },
                "url": {
                  "type": "string",
                  "description": "postgres url"
                }
              },
              "required": [
                "customDb",
                "url"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "customDb": {
                  "type": "boolean",
                  "const": false
                },
                "port": {
                  "type": "number"
                },
                "url": {
                  "type": "string",
                  "description": "postgres url"
                }
              },
              "required": [
                "customDb",
                "port",
                "url"
              ],
              "additionalProperties": false
            }
          ]
        },
        "integrations": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "const": "typescript"
                  },
                  "config": {
                    "type": "object",
                    "properties": {
                      "tsConfigFilePath": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "tsConfigFilePath"
                    ],
                    "additionalProperties": false
                  }
                },
                "required": [
                  "name",
                  "config"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "const": "rag"
                  },
                  "config": {
                    "type": "object",
                    "properties": {
                      "provider": {
                        "type": "object",
                        "properties": {
                          "type": {
                            "type": "string",
                            "const": "openai"
                          },
                          "apiKey": {
                            "type": "string"
                          },
                          "model": {
                            "type": "string",
                            "default": "text-embedding-ada-002"
                          }
                        },
                        "required": [
                          "type",
                          "apiKey"
                        ],
                        "additionalProperties": false
                      }
                    },
                    "required": [
                      "provider"
                    ],
                    "additionalProperties": false
                  }
                },
                "required": [
                  "name",
                  "config"
                ],
                "additionalProperties": false
              }
            ]
          },
          "default": []
        }
      },
      "required": [
        "name",
        "directory",
        "commands",
        "database"
      ]
    },
    {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "$schema"
      ]
    }
  ],
  "$schema": "http://json-schema.org/draft-07/schema#"
}