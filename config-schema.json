{
  "allOf": [
    {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "directory": {
          "type": "string"
        },
        "language": {
          "type": "string",
          "default": "日本語"
        },
        "commands": {
          "type": "object",
          "properties": {
            "install": {
              "type": "string",
              "default": "pnpm i"
            },
            "build": {
              "type": "string",
              "default": "pnpm build"
            },
            "test": {
              "type": "string",
              "default": "pnpm test"
            },
            "testFile": {
              "type": "string",
              "default": "pnpm test <file>"
            },
            "checks": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [
                "pnpm tsc -p . --noEmit"
              ]
            },
            "checkFiles": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [
                "pnpm eslint --fix <files>"
              ]
            }
          },
          "additionalProperties": false
        },
        "shell": {
          "type": "object",
          "properties": {
            "enable": {
              "type": "boolean",
              "default": true
            },
            "allowedCommands": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [
                "pnpm"
              ]
            }
          },
          "additionalProperties": false,
          "default": {}
        },
        "embedding": {
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "const": false,
                  "description": "Enable embedding features"
                }
              },
              "required": [
                "enabled"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "const": true,
                  "description": "Disable embedding features"
                },
                "provider": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "const": "openai"
                    },
                    "apiKey": {
                      "type": "string",
                      "description": "Required only when embedding.enabled is true"
                    },
                    "model": {
                      "type": "string",
                      "default": "text-embedding-ada-002"
                    }
                  },
                  "required": [
                    "type"
                  ],
                  "additionalProperties": false
                }
              },
              "required": [
                "enabled",
                "provider"
              ],
              "additionalProperties": false
            }
          ]
        },
        "database": {
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "customDb": {
                  "type": "boolean",
                  "const": true
                },
                "url": {
                  "type": "string",
                  "description": "postgres url"
                }
              },
              "required": [
                "customDb",
                "url"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "customDb": {
                  "type": "boolean",
                  "const": false
                },
                "port": {
                  "type": "number"
                },
                "url": {
                  "type": "string",
                  "description": "postgres url"
                }
              },
              "required": [
                "customDb",
                "port",
                "url"
              ],
              "additionalProperties": false
            }
          ]
        }
      },
      "required": [
        "name",
        "directory",
        "commands",
        "embedding",
        "database"
      ]
    },
    {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "$schema"
      ]
    }
  ],
  "$schema": "http://json-schema.org/draft-07/schema#"
}